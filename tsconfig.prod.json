{
  "extends": "./tsconfig.json",
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "mocks",
    "tests",
    "src/**/*.story.ts",
    "src/**/*.mock.ts",
    "src/**/*.test.ts"
  ],
  "compilerOptions": {
    "incremental": true,
    "declarationMap": false,
    "sourceMap": false,
    "outDir": "./build",
    "removeComments": true,
    "noEmit": false
  }
}
